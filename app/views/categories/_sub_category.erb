<% @subcategory.each do |sub| %>
  <tr>
    <td data-th="Category">
      <div class="row">
        <div class="col-sm-10">
          <h4 class="nomargin"><%= sub.name %></h4>
        </div>
      </div>
    </td>
    <td class="actions" data-th="">
      <%= link_to edit_category_path(sub), class: "btn btn-info btn-sm" do %>
        <i class="fa fa-edit"></i>
      <% end %>

      <%= link_to sub, method: :delete, 
        data: {confirm: t(".message")}, 
        class: "btn btn-danger btn-sm" do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </td>
  </tr>
<% end %>
