<% provide :title, t(".title") %>

<% if logged_in? %>
  <% if current_user.is_admin %>

<h2 class="title"><%= t ".pro" %></h2>

<div class="container">
  <%= link_to new_product_path, class: "btn btn-info btn-sm" do %>
    <i class="fa fa-add"><%= t ".create" %></i>
  <% end %>
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th class="th1"><%= t ".product" %></th>
        <th class="th2"><%= t ".price" %></th>
        <th class="th3"><%= t ".func" %></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td data-th="Product">
            <div class="row">
              <div class="col-sm-2 hidden-xs">
                <%= image_tag product.image_url, class: "img-responsive", 
                  alt: "" %>
              </div>
              <div class="col-sm-10">
                <h4 class="nomargin"><%= product.title  %></h4>
                <p><%= product.description  %></p>
              </div>
            </div>
          </td>
          <td data-th="Price"><%= product.price  %></td>
          <td class="actions" data-th="">
            <%= link_to edit_product_path(product), 
              class: "btn btn-info btn-sm" do %>
              <i class="fa fa-edit"><%= t ".edit" %></i>
            <% end %>  
            <%= link_to product, class: "btn btn-danger btn-sm", 
              method: :delete, data: {confirm: t(".are")} do %>
              <i class="fa fa-trash-o"><%= t ".del" %></i>
            <% end %>               
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <%= will_paginate @products %>
    </tfoot>
  </table>
</div>
  <% else %>
    <%= render "products" %>
  <% end %>
<% else %>
  <%= render "products" %>
<% end %>
