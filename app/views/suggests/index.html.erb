<% provide :title, t(".manager") %>

<h2 class="title"><%= t ".title" %></h2>

<div class="container">
  <%= link_to new_suggest_path, class: "btn btn-info btn-sm" do %>
    <i class="fa fa-add"><%= t ".create" %></i>
  <% end %>
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th class="th1"><%= t ".product" %></th>
        <th class="th2"><%= t ".price" %></th>
        <th class="th2"><%= t ".status" %></th>
        <th class="th2"><%= t ".func" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render "suggest" %>
    </tbody>
    <tfoot>
      <%= will_paginate @suggests %>
    </tfoot>
  </table>
</div>
