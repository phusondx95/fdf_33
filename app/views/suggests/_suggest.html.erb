<% @suggests.each do |suggest| %>
  <% if suggest.user == current_user %>
    <tr>
      <td data-th="Suggest">
        <div class="row">
          <div class="col-sm-2 hidden-xs">
            <%= image_tag suggest.image , class: "img-responsive", alt: "" %>
          </div>
          <div class="col-sm-10">
            <h4 class="nomargin"><%= suggest.title %></h4>
            <p><%= suggest.description %></p>
          </div>
        </div>
      </td>
      <td data-th="Price"><%= number_to_currency suggest.price, 
        unit: "VNĐ", separator: ".", delimiter: ",", precision: 0, 
        format: "%n %u" %>
      </td>
    <% if suggest.status == true %>
      <td data-th="Status"><%= t ".appro" %></td>
    <% else %>
      <td data-th="Status"><%= t ".not" %></td>
    <% end %>
      <td class="actions" data-th="">
        <%= link_to suggest, class: "btn btn-danger btn-sm", 
          method: :delete, data: {confirm: t(".are")} do %> 
          <i class="fa fa-trash-o"><%= t ".delete" %></i>
        <% end %>               
      </td>
    </tr>
  <% end %>
<% end %>
