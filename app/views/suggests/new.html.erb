<% provide :title, t(".create") %>

<h1><%= t ".create" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @suggest do |f| %>
      <%= render "shared/error_suggests_messages" %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>

      <%= f.label :image, t(".image") %>
      <%= f.file_field :image, class: "form-control", 
        accept: t(".accept") %>

      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>

      <%= f.label :suggest_url %>
      <%= f.text_field :suggest_url, class: "form-control" %>

      <%= f.submit t(".create"), class: "btn btn-primary" %>
      <br>
      <br>
      <br>
    <% end %>
  </div>
</div>
