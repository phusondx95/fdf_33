<% provide :title, t(".title") %>

<h1><%= t ".title" %></h1>

<div class="container">
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th class="th1"><%= t ".pro" %></th>
        <th class="th2"><%= t ".price" %></th>
        <th class="th3"><%= t ".quantity" %></th>
        <th class="th4"><%= t ".sub" %></th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
      <tr>
        <td data-th="Product">
          <div class="row">
            <div class="col-sm-2 hidden-xs">
              <%= image_tag item.product.image_url, 
                class: "img-responsive", alt: "" %>
            </div>
            <div class="col-sm-10">
              <h4 class="nomargin"><%= item.product.title %></h4>
              <p><%= item.product.description %></p>
            </div>
          </div>
        </td>
        <td data-th="Price"><%= number_to_currency item.product.price,
          unit: "VNĐ", separator: ".", delimiter: ",",
          precision: 0, format: "%n %u" %></td>
        <td data-th="Quantity">
          <%= form_for item, remote: true, method: :patch do |f| %>
            <%= f.number_field :quantity, value: item.quantity, 
              class: "form-control text-center" %>
          <% end %>
        </td>
        <td data-th="Subtotal" class="text-center">
          <%= number_to_currencytotal_price(item), unit: "VNĐ", 
            separator: ".", delimiter: ",", precision: 0, 
            format: "%n %u" %>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center">
          <strong>
            <%= t ".total" %> <%= number_to_currency total_cost(@order), 
              unit: "VNĐ", separator: ".", delimiter: ",",
              precision: 0, format: "%n %u" %>
          </strong>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
